      <a class="navbar-brand ps-3">BANKAPP <i class="fas fa-regular fa-dollar-sign"></i></a> 
      </form>
      

  </nav>
  <div id="layoutSidenav">
      <div id="layoutSidenav_nav">
          <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
              <div class="sb-sidenav-menu">
                  <div class="nav">
                    <div class="sb-sidenav-menu-heading">
                        Options</div>

                        <a class="nav-link" href="/" >
                        <div class="sb-nav-link-icon"><i class="fas fa-solid fa-warehouse"></i></div>
                          Home
                        </a>
                       

                        <a class="nav-link" href="<%=user_path(:id => current_user.id)%>" >
                        <div class="sb-nav-link-icon"><i class="fas fa-regular fa-address-card"></i></div>
                          My profile
                        </a>
                        

                        <% if current_user.role == "administrator" || current_user.role == "employee" %>
                        <% if can? :read, User %>
                          <a class="nav-link" href="<%=users_path%>" >
                          <div class="sb-nav-link-icon"><i class="fas fa-user fa-fw"></i></div>
                             Users 
                          </a>
                        <% end %>
                      <% end %>

                  <% if can? :read, BranchOffice %>
                    <a class="nav-link" href="<%=branch_offices_path%>" >
                    <div class="sb-nav-link-icon"><i class="fas fa-regular fa-landmark"></i></div>
                      Branch Offices
                    </a>
                  <% end %>


                  <% if can? :manage, Schedule %>
                    <a class="nav-link" href="<%=schedules_path%>" >
                    <div class="sb-nav-link-icon"><i class="fas fa-solid fa-clock"></i></div>
                      Schedules
                    </a>
                  <% end %>
                  

                  <% if can? :read, Locality %>
                    <a class="nav-link" href="<%=localities_path%>" >
                    <div class="sb-nav-link-icon"><i class="fas fa-regular fa-globe"></i></div>
                      Localities
                    </a>
                  <% end %>


                  <% if can? :read, Turn %>
                    <a class="nav-link" href="<%=turns_path%>" >
                    <div class="sb-nav-link-icon"><i class="fas fa-solid fa-calendar"></i></div>
                      Turns
                    </a>
                  <% end %>
                <% if current_user.role == "administrator"%>
                  <br>
                  <br>
                  <br>
                  <br>
                  <br>
                <% else %>
                <% if current_user.role == "employee"%>
                <br>
