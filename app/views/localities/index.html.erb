<p style="color: green"><%= notice %></p>

<h1>Localities</h1>
<br>
<% if can? :create, Locality %>

<%= link_to "New locality", new_locality_path, class:"btn btn-success" %>


<% end %>

<br>
<br>
 
<div id="localities">

<table class="table table-dark table-hover">
    <thead>
    <tr>
      <th scope="col">Province</th>
      <th scope="col">Locality</th>
      <th scope="col"></th>

    </tr>
    </thead>
    <tbody>
    <% @localities.each do |locality| %>
      <% if can? :read, locality %>
      <tr>
        <td><%=locality.province%></td>
        <td><%=locality.name%></td>
        <td><%= link_to "Show this locality", locality , class:"btn btn-primary"%></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>

