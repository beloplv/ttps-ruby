<p style="color: green"><%= notice %></p>

<h1>Turns</h1>

<br>
<% if can? :create, Turn %>
<%= link_to "New turn", new_turn_path , class:"btn btn-success"%>

<% end %>

<br>
<br>
<div id="turns">
<% if @turns.empty? %>
 <p>does not have turns</p>
 <br>

<% else %>
<table class="table table-dark table-hover">
    <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Hour</th>
      <th scope="col">Motive</th>
      <th scope="col">Status</th>
      <th scope="col">Result</th>
      <th scope="col"></th>

    </tr>
    </thead>
    <tbody>
    <% @turns.each do |turn| %>
      <% if can? :read, turn %>
      <tr>
        <td><%=turn.date%></td>
        <td><%=turn.hour.strftime("%H:%M")%></td>
        <td><%=turn.motive%></td>
        <td><%=turn.status%></td>
        <% if turn.result == nil %>
          <td><%= "empty" %></td>
        <% else %>
          <td><%= turn.result %></td>
        <% end %>
        <td><%= link_to "Show this turn", turn, class:"btn btn-primary" %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>
  </div>
